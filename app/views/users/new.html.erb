<% if @user.errors.any? %>
  <div id="errors-explanation">
    <h3>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this account from being created.
    </h3>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Sign Up</h1>
<%= form_for :user, url: '/users' do |f| %>

<% if @user.errors[:email].empty? %>
<div class="field">
  <% else %>
  <div class="field_with_errors">
    <% end %>
  <%= f.text_field :email, placeholder: "email" %></br>
  <%= "That email is already in use." %>
</div>
  <%= f.text_field :name, placeholder: "username" %><br>
  <%= f.password_field :password, placeholder: "password" %><br>

  <%= f.submit "Create Account" %>
<% end %>
