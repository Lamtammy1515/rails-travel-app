<div class="prev-next-container">
  <a href="#" class="js-previous-trip" data-user-id="<%= @user.id %>" data-trip-id="<%= @trip.id %>">Previous Trip</a>
  <a href="#" class="js-next-trip" data-user-id="<%= @user.id %>" data-trip-id="<%= @trip.id %>">Next Trip</a>

  <h3><span class="tripCity"><%= @trip.city.city_plus_country %></span></h3>
  <p>Rating: <span class="tripRating"><%= @trip.rating %></span></p>
  <p>Must See Attraction: <span class="tripMustSee"><%= @trip.fave_attraction %></span></p>
  <p>Review: <span class="tripReview"><%= @trip.comment %></span></p>

  <% if @user == current_user %>
    <%= link_to "Edit Trip", edit_user_trip_url, :class => 'btn btn-sm btn-primary btn-rounded' %>
    <%= link_to "Delete Trip", user_trip_path, :method => 'delete', data: { confirm: "Are you sure?" }, :class => 'btn btn-sm btn-secondary btn-rounded' %>
  <% end %>

</div>
