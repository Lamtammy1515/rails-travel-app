<div class="page-container trip-index">
  <h4><%= @user.name %>'s Trips</h4>
  <span class="bold-text">Total Trips: </span><%= @user.trip_count %><br>
  <span class="bold-text">Last Trip Added:</span>
  <span class="no-underline"><%= link_to @user.last_trip.city.name, user_trip_path(@user, @user.last_trip) %></span><br><br>
  <% @trips.each do |trip| %>
    <div class="underlined-list">
      <p class="no-underline bold-text"><%= link_to trip.city.city_plus_country, user_trip_path(@user, trip) %></p>
      <div id="trip-<%= trip.id %>"><%= truncate(trip.comment) %></div>
      <a href="#" class="js-more" id="more-<%= trip.id %>" data-more-trip-id="<%= trip.id %>">Read More...</a>
      <ul id="trip-<%= trip.id %>-">
    </ul>
    </div>
  <% end %>
</div>
