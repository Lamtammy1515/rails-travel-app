<h1>New Trip Placeholder</h1>
<%= form_for :trip, url: trips_path do |f| %>

  <%= f.hidden_field :user_id %>

  <%= f.label :city, "Select City" %><br>
  <%= f.collection_select :city_id, City.all, :id, :name, :include_blank => true %><br>

  <%= f.label :city, "Or Add New City" %><br>
  <%= f.fields_for :city_attributes do |city_attr| %>
    <%= city_attr.text_field :name %><br>
    Select Country <%= city_attr.collection_select :country_id, Country.all, :id, :name, :include_blank => true %>
    Or Add New Country <%= city_attr.text_field :country %><br>
  <% end %>

  <%= f.label :rating, "Rating (Scale of 1-5, where 5 = Best Trip Ever!)" %><br>
  <%= f.text_field :rating %><br>

  <%= f.label :fave_attraction, "Favorite Attraction" %><br>
  <%= f.text_field :fave_attraction %><br>

  <%= f.label :comment %><br>
  <%= f.text_area :comment, :cols => "25", :rows => "5" %><br>

  <%= f.submit "Add Trip" %>
<% end %>
