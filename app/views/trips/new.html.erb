<h1>New Trip</h1>
<%= form_for :trip, url: trips_path do |f| %>
  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.label :city, "Select City" %><br>
  <%= f.collection_select :city_id, City.all, :id, :name, :include_blank => true %><br><br>

  Or Add New City:<br><br>
  <%= f.fields_for :city_attributes do |city_attr| %>

    Name:
    <%= city_attr.text_field :name %>

    Select Country:
    <%= city_attr.collection_select :country_id, Country.all, :id, :name, :include_blank => true %>
    Or Add New Country:
    <%= city_attr.text_field :country %><br><br>

  <% end %>

  <%= f.label :rating, "Rating (Scale of 1-5, where 5 = Best Trip Ever!)" %><br><br>
  <%= f.text_field :rating %><br><br>

  <%= f.label :fave_attraction, "Must See Attraction" %><br><br>
  <%= f.text_field :fave_attraction %><br><br>

  <%= f.label :comment %><br><br>

  <%= f.text_area :comment, :size => "35x5" %><br><br>

  <%= f.submit "Add Trip" %>
<% end %>
