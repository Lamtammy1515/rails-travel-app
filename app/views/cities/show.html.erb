<div class="page-container prev-next">
  <% if City.all.order(:name).first.id == @city.id %>
    <a href="#" class="js-previous-city" style="display:none;" data-city-id="<%= @city.id %>">&laquo; Previous</a>
  <% else %>
    <a href="#" class="js-previous-city" data-city-id="<%= @city.id %>">&laquo; Previous</a>
  <% end %>

  <% if City.all.order(:name).last.id == @city.id %>
    <a href="#" class="js-next-city" style="display:none;" data-city-id="<%= @city.id %>">Next &raquo;</a>
  <% else %>
    <a href="#" class="js-next-city" data-city-id="<%= @city.id %>">Next &raquo;</a>
  <% end %>

  <h3 class="cityName"><%= @city.name %></h3>
  <p><span class="bold-text">Country: </span><span class="countryName"><%= @city.country.name %></span></p>
  <p><span class="bold-text">Total Trips: </span><span class="cityTripCount"><%= @city.trip_count %></span></p>
  <p><span class="bold-text">Average Rating: </span><span class="cityAvgRating"><%= @city.avg_rating %></span></p>

  <a href="#" class="js-display-comments" data-city-id="<%= @city.id %>">Show Reviews</a><br><br>
  <div id="js-city-comments"></div>
</div>
