<div>
<h4 class="align-table">Explore Cities</h4>
<p class="align-table blue-bold"><%= @top_city.name %> is our most reviewed city with <%= @top_city.trips.count %> trips!</p>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Total Trips</th>
      <th>Average Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
    <tr class="border-bottom">
      <td class="no-underline"><%= link_to city.city_country, city_path(city) %></td>
      <td><%= city.trips.count %></td>
      <td><%= city.avg_rating %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
