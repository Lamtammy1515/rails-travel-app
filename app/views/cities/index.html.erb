<h4 class="align-table">Explore Cities</h4>
<p class="align-table"><%= link_to "What's Our Most Popular City? Find Out Here!", most_visited_url %></p>
<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Average Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
    <tr class="border-bottom">
      <td class="no-underline"><%= link_to city.city_plus_country, city_path(city) %></td>
      <td><%= city.avg_rating %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="button-below-table">
  <%= link_to "Add New City", new_city_url, :class => 'btn btn-sm btn-primary btn-rounded' %>
</div>
