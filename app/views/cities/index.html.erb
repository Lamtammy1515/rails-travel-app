<div class="table-container">
  <h4 class="align-table">Explore Cities</h4>
  <span class="align-table"><%= link_to "Check Out the Most Reviewed City", most_visited_url %></span><br>
  <span class="align-table"><%= link_to "View Our Highest Rated Cities", highly_rated_url %></span><br><br>
  <table>
    <thead>
      <tr>
        <th>City</th>
        <th>Average Rating</th>
        <th>Been Here?</th>
      </tr>
    </thead>
    <tbody>
      <div class="city-list">
      <% @cities.each do |city| %>
      <tr class="border-bottom">
        <td class="no-underline" id="city-<%= city.id %>"><%= link_to city.city_plus_country, city_path(city) %></td>
        <td><%= city.avg_rating %></td>
        <% if !Trip.exists?(user_id: current_user.id, city_id: city.id) %>
        <td><%= link_to "Add Trip", new_user_trip_path(:user_id => current_user.id, :city_id => city.id) %><td>
          <% elsif Trip.exists?(user_id: current_user.id, city_id: city.id) %>
          <td>&check;</td>
        <% end %>
      </div>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <div class="button-below-table">
    <%= link_to "Add New City", new_city_url, :class => 'btn btn-sm btn-primary btn-rounded' %>
  </div>
</div>
